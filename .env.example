# API Keys
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Server Configuration
HOST=localhost
PORT=8000
DEBUG=true

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
MIC_DEVICE_INDEX=0

# LLM Configuration
PRIMARY_LLM=claude
FALLBACK_LLM=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Voice Configuration
TTS_PROVIDER=elevenlabs
ELEVENLABS_VOICE_ID=your_preferred_voice_id
ELEVENLABS_MODEL=eleven_monolingual_v1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost/voiceagent
VECTOR_DB_PATH=./data/memory/chroma_db

# Memory Configuration
MAX_MEMORY_ENTRIES=1000
MEMORY_RETENTION_DAYS=30

# Smart Home Configuration
HOME_ASSISTANT_URL=http://localhost:8123
HOME_ASSISTANT_TOKEN=your_home_assistant_token

# Mobile Bridge (スマホ連携) Configuration
# スマホ側コンパニオンアプリのHTTPベースブリッジ（例: http://phone.local:8765）
MOBILE_BRIDGE_URL=
MOBILE_BRIDGE_TOKEN=

# MCP (Model Context Protocol) Servers
# 例: {"gmail":{"endpoint":"http://localhost:9001","token":"..."},
#      "calendar":{"endpoint":"http://localhost:9002","token":"..."}}
MCP_SERVERS=

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/voiceagent.log
